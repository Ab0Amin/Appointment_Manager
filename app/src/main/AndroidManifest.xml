<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.appointmentmanager">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppointmentManager"
        android:usesCleartextTraffic="true">
        <receiver
            android:name=".decorator.ReapetedReciever"
            android:enabled="true"
            android:exported="true"></receiver>

        <activity android:name=".dataCashing" />
        <activity android:name=".login">
            
        </activity>
        <activity android:name=".AppointmentPage" />
        <activity android:name=".SettingsActivity" />
        <activity
            android:name=".AddAppointment"
            android:screenOrientation="portrait" />

        <receiver
            android:name=".decorator.MyReceiver"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppointmentManager" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>