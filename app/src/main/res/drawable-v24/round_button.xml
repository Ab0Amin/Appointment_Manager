<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/cardview_dark_background"
                android:endColor="@color/cardview_dark_background"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/cardview_light_background" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="@color/secondaryDarkColor"
                android:startColor="@color/secondaryDarkColor"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/cardview_light_background" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:endColor="#171F61"
                android:startColor="#171F61"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/cardview_light_background" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>